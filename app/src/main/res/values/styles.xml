                      Customize your theme here. -->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">


    </style>

    <style name="AppThemeUrdu" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:textSize">18sp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:scrollViewStyle">@style/BackgroundStyle</item>
        <item name="android:spinnerStyle">@style/spinner</item>
        <item name="android:actionBarStyle">@style/topBarStyle</item>
        <item name="android:textViewStyle">@style/labels</item>
        <item name="android:editTextStyle">@style/textInput</item>
        <item name="radioButtonStyle">@style/radiobutton</item>
        <item name="checkboxStyle">@style/checkbox</item>
        <item name="hintEnabled">false</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:textColorHint">@color/grayLight</item>
        <item name="android:fontFamily">@font/jameel</item>
        <item name="android:typeface">sans</item>
        <item name="android:fillAfter">true</item>
        <item name="android:enterFadeDuration">600</item>
        <item name="android:exitFadeDuration">200</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:animateLayoutChanges">false</item>
        <item name="android:toolbarStyle">@style/topBarStyle</item>

    </style>


    <style name="BackgroundStyle" parent="android:Widget.ScrollView">
        <item name="android:background">@drawable/app_bg_gray</item>
        <item name="android:padding">24dp</item>
    </style>

    <style name="topBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily">@font/roboto</item>

    </style>

    <style name="labels" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">bold</item>

        <!--
                        <item name="android:background">@color/colorPrimary_overlay</item>
        -->

    </style>

    <style name="textInput" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:background">@drawable/options_separator</item>
        <item name="android:textColor">@color/grayDark</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <!--
                <item name="android:textStyle">bold</item>
        -->
        <!--        <item name="android:textDirection">ltr</item>-->
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="radiobutton" parent="Widget.AppCompat.CompoundButton.RadioButton">

        <item name="android:gravity">center_vertical</item>
        <item name="android:elevation">1dp</item>
        <item name="android:radius">2dp</item>
        <item name="android:drawablePadding">8dp</item>

        <!--
                <item name="android:paddingStart">24dp</item>
        -->
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:background">@drawable/options_separator</item>
    </style>

    <style name="checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:clickable">true</item>

        <item name="android:background">@drawable/options_separator</item>

    </style>

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:radius">2dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/gray</item>
        <!--        <item name="android:background">@drawable/background_grad</item>-->
    </style>

    <style name="spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ff0000</item>
        <item name="android:background">#efefef</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>

    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:text">SpinnerItemText</item>
    </style>


    <style name="SpinnerItemText">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="FullscreenTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <!-- <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
         <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>-->
    </style>


    <!--Card View Start-->
    <style name="cardView">
        <!--
                <item name="android:background">@color/white</item>
        -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@color/grayLight</item>

        <!--<item name="android:layout_marginRight">10dp</item>-->
        <!--<item name="android:layout_marginLeft">10dp</item>-->
        <item name="cardCornerRadius">7dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="vlinearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/grayDark</item>
    </style>

    <style name="EditTextAlpha" parent="@style/textInput">
        <item name="android:digits">abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:radius">8dp</item>

        <!--        <item name="android:textDirection">ltr</item>-->

        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="quesNum">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="info">
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">#FFEB9C</item>
        <item name="android:textColor">@color/red_overlay</item>
        <item name="android:padding">8dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.04</item>


    </style>

    <style name="heading">
        <item name="android:background">@drawable/subheadings_separator</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="sub_labels">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:background">@drawable/sub_labels_separator</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <color name="red_overlay">#7fff0000</color>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ToolBarStyle" parent="ToolBarStyle.Base" />

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
